{
	"name": "startup-backend",
	"version": "1.0.0",
	"main": "index.js",
	"license": "MIT",
	"scripts": {
		"lint": "eslint . --ext .ts",
		"pretty": "prettier --write 'src/**/*.ts",
		"precommit": "lint-staged",
		"prepare": "husky install",
		"build": " (rimraf build/* ; tsc)",
		"start": "NODE_PATH=build/ node --max-old-space-size=5120 -r dotenv/config build/src/index.js",
		"dev": "ts-node-dev --respawn --transpile-only src/app.ts"
	},
	"dependencies": {
		"bcrypt": "^5.0.1",
		"bluebird": "^3.7.2",
		"config": "^3.3.7",
		"cors": "^2.8.5",
		"dotenv": "^14.2.0",
		"express": "^4.17.2",
		"jsonwebtoken": "^8.5.1",
		"swagger-jsdoc": "^6.1.0",
		"swagger-ui-express": "^4.3.0"
	},
	"devDependencies": {
		"@types/bcrypt": "^5.0.0",
		"@types/config": "^0.0.41",
		"@types/cors": "^2.8.12",
		"@types/express": "^4.17.13",
		"@types/jsonwebtoken": "^8.5.8",
		"@types/swagger-jsdoc": "^6.0.1",
		"@types/swagger-ui-express": "^4.1.3",
		"@typescript-eslint/eslint-plugin": "^5.10.0",
		"@typescript-eslint/parser": "^5.10.0",
		"babel-eslint": "^10.1.0",
		"eslint": "^8.7.0",
		"eslint-config-airbnb-base": "^15.0.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-import": "^2.25.4",
		"eslint-plugin-prettier": "^4.0.0",
		"husky": "^7.0.4",
		"lint-staged": "^12.2.0",
		"prettier": "^2.5.1",
		"ts-node-dev": "^1.1.8",
		"typescript": "^4.5.4"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.{ts}": [
			"yarn run lint"
		]
	},
	"moduleFileExtensions": [
		"ts",
		"tsx",
		"jsx",
		"json",
		"node"
	],
	"modulePaths": [
		"<rootDir>/src"
	]
}
